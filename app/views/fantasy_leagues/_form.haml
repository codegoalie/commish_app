=form_for @fantasy_league do |f|
  =show_errors_for(@fantasy_league)

  .row
    .one.columns
      =f.label :name
    .three.columns.end
      =f.text_field :name
  .row
    .one.columns
      =f.label :espn_id
    .three.columns.end
      =f.text_field :espn_id
  .row
    .one.columns
      =f.label :year
    .three.columns.end
      =f.text_field :year

  .row
    .twelve.columns
      -submit_text = @fantasy_league.new_record? ? 'Add' : 'Save'
      =f.submit submit_text
      -unless @fantasy_league.new_record?
        =link_to 'cancel', @fantasy_league
        %br
        %br
        =link_to 'delete', @fantasy_league, method: 'delete'

